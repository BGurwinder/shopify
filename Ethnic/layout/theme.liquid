<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if settings.favicon != blank %}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {% endif %}

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}

    {%- liquid
      assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
      assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}

    <style>
      {{ settings.type_body_font | font_face: font_display: 'swap' }}
      {{ body_font_bold | font_face: font_display: 'swap' }}
      {{ body_font_italic | font_face: font_display: 'swap' }}
      {{ body_font_bold_italic | font_face: font_display: 'swap' }}
      {{ settings.type_header_font | font_face: font_display: 'swap' }}
      {{ settings.type_subheader_font | font_face: font_display: 'swap' }}
      {{ settings.type_accent_font | font_face: font_display: 'swap' }}

      :root {
        --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
        --font-body-style: {{ settings.type_body_font.style }};
        --font-body-weight: {{ settings.type_body_font.weight }};
        --font-body-weight-bold: {{ settings.type_body_font.weight | plus: 300 | at_most: 1000 }};

        --font-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
        --font-heading-style: {{ settings.type_header_font.style }};
        --font-heading-weight: {{ settings.type_header_font.weight }};

        --font-subheading-family: {{ settings.type_subheader_font.family }}, {{ settings.type_subheader_font.fallback_families }};
        --font-accent-family: {{ settings.type_accent_font.family }}, {{ settings.type_accent_font.fallback_families }};

        --font-body-scale: {{ settings.type_body_size | divided_by: 16.0 }};
        --font-body-line-height: {{ settings.type_body_line_height }};
        --font-body-color: {{ settings.type_body_color }};
        --font-body-transform: {{ settings.type_body_transform }};
        --font-body-letter-spacing: {{ settings.type_body_letter_spacing }}px;
        --font-body-weight-custom: {{ settings.type_body_weight }};

        --h1-size: {{ settings.h1_size }}px;
        --h1-color: {{ settings.h1_color }};
        --h1-transform: {{ settings.h1_transform }};
        --h1-line-height: {{ settings.h1_line_height }};
        --h1-letter-spacing: {{ settings.h1_letter_spacing }}px;
        --h1-weight: {{ settings.h1_weight }};

        --h2-size: {{ settings.h2_size }}px;
        --h2-color: {{ settings.h2_color }};
        --h2-transform: {{ settings.h2_transform }};
        --h2-line-height: {{ settings.h2_line_height }};
        --h2-letter-spacing: {{ settings.h2_letter_spacing }}px;
        --h2-weight: {{ settings.h2_weight }};

        --h3-size: {{ settings.h3_size }}px;
        --h3-color: {{ settings.h3_color }};
        --h3-transform: {{ settings.h3_transform }};
        --h3-line-height: {{ settings.h3_line_height }};
        --h3-letter-spacing: {{ settings.h3_letter_spacing }}px;
        --h3-weight: {{ settings.h3_weight }};

        --h4-size: {{ settings.h4_size }}px;
        --h4-color: {{ settings.h4_color }};
        --h4-transform: {{ settings.h4_transform }};
        --h4-line-height: {{ settings.h4_line_height }};
        --h4-letter-spacing: {{ settings.h4_letter_spacing }}px;
        --h4-weight: {{ settings.h4_weight }};

        --h5-size: {{ settings.h5_size }}px;
        --h5-color: {{ settings.h5_color }};
        --h5-transform: {{ settings.h5_transform }};
        --h5-line-height: {{ settings.h5_line_height }};
        --h5-letter-spacing: {{ settings.h5_letter_spacing }}px;
        --h5-weight: {{ settings.h5_weight }};

        --h6-size: {{ settings.h6_size }}px;
        --h6-color: {{ settings.h6_color }};
        --h6-transform: {{ settings.h6_transform }};
        --h6-line-height: {{ settings.h6_line_height }};
        --h6-letter-spacing: {{ settings.h6_letter_spacing }}px;
        --h6-weight: {{ settings.h6_weight }};
      }
    </style>

    {{ 'style.css' | asset_url | stylesheet_tag }}
  </head>

  <body>
    {% if template.name == 'index' %}
      {% section 'header' %}
    {% elsif template.name == 'product' %}
      {% section 'header-product' %}
    {% else %}
      {% section 'header' %}
    {% endif %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
    {% section 'mobile-nav' %}
    {% section 'mobile-search-overlay' %}
    {% section 'cart-drawer' %}

    <script src="{{ 'search-overlay.js' | asset_url }}" defer="defer"></script>

    <script src="{{ 'script.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'custom-collection.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'flying-ball.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'animation-files/gsap.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'animation-files/lenis.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'animation-files/ScrollTrigger.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'animation-files/split-type.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'animation-files/gsap-animtion.js' | asset_url }}" defer="defer"></script>
    {{ 'flying-ball.css' | asset_url | stylesheet_tag }}

    <script>
      document.addEventListener('click', function (e) {
        // Check if the clicked element or its parent is an accordion header
        const header = e.target.closest('.accordion-header');

        if (header) {
          e.preventDefault(); // Prevent default button behavior
          console.log('Accordion header clicked:', header);

          const item = header.parentElement;
          const content = item.querySelector('.accordion-content');

          // Toggle active class
          item.classList.toggle('active');

          // Smooth Animation
          if (item.classList.contains('active')) {
            content.style.maxHeight = content.scrollHeight + 'px';
            console.log('Opening accordion, height:', content.scrollHeight);
          } else {
            content.style.maxHeight = null;
            console.log('Closing accordion');
          }
        }
      });
    </script>
  </body>
</html>
