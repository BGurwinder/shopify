<div class="two-collections-section page-width section-{{ section.id }}-padding">
  <div class="two-collections-grid">
    {%- for i in (1..2) -%}
      {%- capture collection_setting -%}collection_{{ i }}{%- endcapture -%}
      {%- assign collection_handle = section.settings[collection_setting] -%}
      {%- assign collection = collections[collection_handle] -%}

      <div class="collection-card">
        <a href="{{ collection.url | default: '#' }}" class="collection-link">
          <div
            class="collection-image-wrapper"
          >
            {%- if collection.image != blank -%}
              {{ collection.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'collection-image' }}
            {%- elsif collection.products.first.featured_image != blank -%}
              {{
                collection.products.first.featured_image
                | image_url: width: 800
                | image_tag: loading: 'lazy', class: 'collection-image'
              }}
            {%- else -%}
              {%- assign default_image = 'carousel-images/carousel-' | append: i | append: '.webp' -%}
              <img
                src="{{ default_image | asset_url }}"
                alt="Default Collection Image"
                width="800"
                height="{{ section.settings.image_height }}"
                loading="lazy"
                class="collection-image"
              >
            {%- endif -%}
          </div>

          <div
            class="collection-content"
            style="
              text-align: {{ section.settings.text_alignment }};
              color: {{ section.settings.text_color }};
            "
          >
            <h3
              class="collection-title"
              style="
                font-size: {{ section.settings.text_size }}px;
                text-transform: {{ section.settings.text_transform }};
                color: {{ section.settings.text_color }};
              "
            >
              {{ collection.title | default: 'Collection Title' }}
            </h3>

            {%- if section.settings.show_button -%}
              <span class="collection-button">
                {{ section.settings.button_text }}
                <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M6.99996 1.16666L12.8333 6.99999M12.8333 6.99999L6.99996 12.8333M12.8333 6.99999L1.16663 6.99999" stroke="currentColor" stroke-width="1.67" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            {%- endif -%}
          </div>
        </a>
      </div>
    {%- endfor -%}
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .two-collections-grid {
    display: grid;
        width: 90%;
    justify-self: center;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.grid_gap }}px;
  }

  .collection-card {
    position: relative;
    width: 100%;
  }

  .collection-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .collection-image-wrapper {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    overflow: hidden;
    border-radius: 8px; /* Optional: adds rounded corners */
    margin-bottom: 15px;
  }

  .collection-image {
    width: 100%;
    height: 100%;
    object-fit: cover;

    transition: transform 0.5s ease;
  }

  .collection-card:hover .collection-image {
    transform: scale(1.05);
  }

  .collection-content {
    display: flex;
    flex-direction: column; /* Or row based on design, but usually title and button are stacked or inline */
    justify-content: space-between;
    align-items: {% if section.settings.text_alignment == 'center' %}center{% elsif section.settings.text_alignment == 'right' %}flex-end{% else %}flex-start{% endif %};
  }

  /* If button is inline with title as per image */
  .collection-content {
    flex-direction: row;
    align-items: center;
  }

  .collection-title {
    margin: 0;
    font-weight: 500;
  }

  .collection-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media screen and (max-width: 768px) {
    .two-collections-grid {
      width: 100%;
      grid-template-columns: 1fr;
    }

    .collection-image-wrapper {
      height: {{ section.settings.image_height_mobile }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Two Collections",
  "settings": [
    {
      "type": "header",
      "content": "Collections"
    },
    {
      "type": "collection",
      "id": "collection_1",
      "label": "First Collection"
    },
    {
      "type": "collection",
      "id": "collection_2",
      "label": "Second Collection"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 200,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Image Height",
      "default": 400
    },
    {
      "type": "range",
      "id": "image_height_mobile",
      "min": 100,
      "max": 600,
      "step": 10,
      "unit": "px",
      "label": "Image Height (Mobile)",
      "default": 300
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Grid Gap",
      "default": 30
    },
    {
      "type": "header",
      "content": "Typography & Colors"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Text Size",
      "default": 24
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "text_transform",
      "label": "Text Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "capitalize", "label": "Capitalize" },
        { "value": "lowercase", "label": "Lowercase" }
      ],
      "default": "capitalize"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Two Collections"
    }
  ]
}
{% endschema %}
