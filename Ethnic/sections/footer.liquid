{{ 'footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer-section {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }

  /* Brand Column */
  .footer-tagline {
    color: {{ section.settings.tagline_color }};
    font-size: {{ section.settings.tagline_size }}px;
    font-weight: {{ section.settings.tagline_weight }};
    text-transform: {{ section.settings.tagline_transform }};
    text-align: {{ section.settings.tagline_alignment }};
  }

  /* Newsletter Column */
  .footer-newsletter-heading {
    color: {{ section.settings.news_heading_color }};
    font-size: {{ section.settings.news_heading_size }}px;
    font-weight: {{ section.settings.news_heading_weight }};
    text-transform: {{ section.settings.news_heading_transform }};
    text-align: {{ section.settings.news_heading_alignment }};
  }
  .footer-newsletter-subtext {
    color: {{ section.settings.news_subtext_color }};
    font-size: {{ section.settings.news_subtext_size }}px;
    font-weight: {{ section.settings.news_subtext_weight }};
    text-transform: {{ section.settings.news_subtext_transform }};
    text-align: {{ section.settings.news_subtext_alignment }};
  }
  .footer-newsletter-input {
    color: {{ section.settings.input_text_color }};
    border-bottom-color: {{ section.settings.input_border_color }};
  }
  .footer-newsletter-input::placeholder {
    color: {{ section.settings.input_text_color }};
  }
  .footer-newsletter-btn {
    background-color: {{ section.settings.btn_bg_color }};
    color: {{ section.settings.btn_text_color }};
  }

  /* Links Column */
  .footer-links-heading {
    color: {{ section.settings.links_heading_color }};
    font-size: {{ section.settings.links_heading_size }}px;
    font-weight: {{ section.settings.links_heading_weight }};
    text-transform: {{ section.settings.links_heading_transform }};
    text-align: {{ section.settings.link_alignment }};
  }
  .footer-links-list {
    text-align: {{ section.settings.link_item_alignment }};
  }
  .footer-link {
    color: {{ section.settings.link_color }};
    font-size: {{ section.settings.link_size }}px;
    font-weight: {{ section.settings.link_weight }};
    text-transform: {{ section.settings.link_transform }};
  }
{%- endstyle -%}

<footer class="footer-section">
  <div class="page-width custom-page-width">
    <div class="footer-container">
      <!-- Column 1: Brand -->
      <div class="footer-column footer-brand">
        {% if section.settings.logo != blank %}
          {{
            section.settings.logo
            | image_url: width: section.settings.logo_width
            | image_tag: class: 'footer-logo-image', loading: 'lazy'
          }}
        {% else %}
          <img
            src="{{ 'white Ethnica logo.png' | asset_url }}"
            alt="{{ shop.name }}"
            class="footer-logo-image"
            loading="lazy"
            width="{{ section.settings.logo_width }}"
            height="auto"
          >
        {% endif %}

        {% if section.settings.tagline != blank %}
          <div class="footer-tagline">{{ section.settings.tagline }}</div>
        {% endif %}
      </div>

      <!-- Column 2: Newsletter -->
      <div class="footer-column footer-newsletter">
        {% if section.settings.news_heading != blank %}
          <h3 class="footer-newsletter-heading">{{ section.settings.news_heading }}</h3>
        {% endif %}
        {% if section.settings.news_subtext != blank %}
          <div class="footer-newsletter-subtext">{{ section.settings.news_subtext }}</div>
        {% endif %}

        {% form 'customer', class: 'footer-newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input
            id="NewsletterForm--{{ section.id }}"
            type="email"
            name="contact[email]"
            class="footer-newsletter-input"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              autofocus
              aria-invalid="true"
              aria-describedby="Newsletter-error--{{ section.id }}"
            {% elsif form.posted_successfully? %}
              aria-describedby="Newsletter-success--{{ section.id }}"
            {% endif %}
            placeholder="Email"
            required
          >
          <button type="submit" class="footer-newsletter-btn" name="commit">
            {{ section.settings.btn_text | default: 'Subscribe' }}
          </button>
        {% endform %}
      </div>

      <!-- Column 3: Links -->
      <div class="footer-column footer-links">
        {% if section.settings.links_heading != blank %}
          <h3 class="footer-links-heading">{{ section.settings.links_heading }}</h3>
        {% endif %}
        <ul class="footer-links-list">
          {% for link in section.settings.menu.links %}
            <li class="footer-links-item">
              <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <!-- Social Icons -->
    <div class="footer-social">
      {% assign social_icon_count = 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'social_icon' %}
          {% assign social_icon_count = social_icon_count | plus: 1 %}
        {% endif %}
      {% endfor %}
      {% if social_icon_count > 0 %}
        {% for block in section.blocks %}
          {% if block.type == 'social_icon' %}
            <a href="{{ block.settings.link }}" class="footer-social-link" target="_blank" rel="noopener">
              {% if block.settings.icon_type == 'custom' %}
                {% if block.settings.icon_image != blank %}
                  {{
                    block.settings.icon_image
                    | image_url: width: section.settings.social_icon_width
                    | image_tag: class: 'footer-social-icon', loading: 'lazy', style: 'width: 100%; height: auto;'
                  }}
