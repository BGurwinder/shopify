{{ 'section-main-list-collections.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<div class="page-width section-padding">
  <h1 class="title title--primary inline-richtext{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ section.settings.title }}
  </h1>

  {%- liquid
    case section.settings.sort
      when 'products_high', 'products_low'
        assign collections = collections | sort: 'all_products_count'
      when 'date', 'date_reversed'
        assign collections = collections | sort: 'published_at'
    endcase

    if section.settings.sort == 'products_high' or section.settings.sort == 'date_reversed' or section.settings.sort == 'alphabetical_reversed'
      assign collections = collections | reverse
    endif

    assign paginate_by = 30
    if request.params.limit
      assign paginate_by = request.params.limit | plus: 0
    endif
  -%}

  <div class="collection-list-controls">
    <div class="grid-layout-selector">
      <span class="grid-label">Grid</span>
      <div class="grid-options">
        <a href="?limit=10" class="grid-option {% if paginate_by == 10 %}active{% endif %}">10</a>
        <a href="?limit=30" class="grid-option {% if paginate_by == 30 %}active{% endif %}">30</a>
        <a href="?limit=50" class="grid-option {% if paginate_by == 50 %}active{% endif %}">50</a>
      </div>
    </div>
  </div>

  {%- paginate collections by paginate_by -%}
    <ul
      class="collection-list grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
      role="list"
      style="--grid-desktop: {{ section.settings.columns_desktop }}; --grid-mobile: {{ section.settings.columns_mobile }};"
    >
      {%- for collection in collections -%}
        <li
          class="collection-list__item grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          <div class="card-wrapper animate-arrow">
            <div class="card card--standard card--media">
              <div
                class="card__inner color-{{ section.settings.color_scheme }} gradient ratio"
                style="--ratio-percent: 125%;"
              >
                {%- if collection.featured_image != blank -%}
                  <div class="card__media">
                    <div class="media media--transparent media--hover-effect">
                      <img
                        srcset="
                          {%- if collection.featured_image.width >= 165 -%}{{ collection.featured_image | image_url: width: 165 }} 165w,{%- endif -%}
                          {%- if collection.featured_image.width >= 330 -%}{{ collection.featured_image | image_url: width: 330 }} 330w,{%- endif -%}
                          {%- if collection.featured_image.width >= 535 -%}{{ collection.featured_image | image_url: width: 535 }} 535w,{%- endif -%}
                          {%- if collection.featured_image.width >= 750 -%}{{ collection.featured_image | image_url: width: 750 }} 750w,{%- endif -%}
                          {%- if collection.featured_image.width >= 1000 -%}{{ collection.featured_image | image_url: width: 1000 }} 1000w,{%- endif -%}
                          {%- if collection.featured_image.width >= 1500 -%}{{ collection.featured_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                          {%- if collection.featured_image.width >= 3000 -%}{{ collection.featured_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                          {{ collection.featured_image | image_url }} {{ collection.featured_image.width }}w
                        "
                        src="{{ collection.featured_image | image_url: width: 1500 }}"
                        sizes="
                          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: section.settings.columns_desktop }}px,
                          (min-width: 750px) {% if section.settings.columns_desktop > 1 %}calc((100vw - 10rem) / 2){% else %}calc(100vw - 10rem){% endif %},
                          calc(100vw - 3rem)
                        "
                        alt="{{ collection.title | escape }}"
                        height="{{ collection.featured_image.height }}"
                        width="{{ collection.featured_image.width }}"
                        loading="lazy"
                        class="motion-reduce"
                      >
                    </div>
                  </div>
                {%- endif -%}
              </div>
              <div class="card__content">
                <div class="card__information">
                  <h3 class="card__heading">
                    <a
                      {% if collection.all_products_count > 0 %}
                        href="{{ collection.url }}"
                      {% endif %}
                      class="full-unstyled-link"
                    >
                      {{- collection.title -}}
                    </a>
                  </h3>
                </div>
              </div>
            </div>
          </div>
        </li>
      {%- endfor -%}
    </ul>

    {% render 'pagination', paginate: paginate %}
  {%- endpaginate -%}
</div>

{% schema %}
{
  "name": "Collections List",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Collections",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "sort",
      "options": [
        {
          "value": "alphabetical",
          "label": "Alphabetical"
        },
        {
          "value": "alphabetical_reversed",
          "label": "Alphabetical Reversed"
        },
        {
          "value": "date_reversed",
          "label": "Date Reversed"
        },
        {
          "value": "date",
          "label": "Date"
        },
        {
          "value": "products_high",
          "label": "Products High"
        },
        {
          "value": "products_low",
          "label": "Products Low"
        }
      ],
      "default": "alphabetical",
      "label": "Sort By"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Columns Desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 Column"
        },
        {
          "value": "2",
          "label": "2 Columns"
        }
      ],
      "default": "2",
      "label": "Columns Mobile"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
