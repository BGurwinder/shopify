<div class="explore-more-section page-width section-{{ section.id }}-padding">
  <div class="explore-more-container">
    <div class="explore-more-left">
      {% if section.settings.main_image != blank %}
        {{
          section.settings.main_image
          | image_url: width: 1000
          | image_tag: loading: 'lazy', class: 'explore-main-image'
        }}
      {% else %}
        <img
          src="{{ 'carousel-images/carousel-4.webp' | asset_url }}"
          class="explore-main-image"
          loading="lazy"
          width="1000"
          height="1000"
          alt="Default Main Image"
          style="width: 100%; height: 100%; object-fit: cover; border-radius: 0px;"
        >
      {% endif %}
    </div>

    <div class="explore-more-right">
      <div class="explore-content">
        {% if section.settings.heading != blank %}
          <h2
            class="explore-heading"
            style="
              font-size: {{ section.settings.heading_size }}px;
              font-weight: {{ section.settings.heading_weight }};
              color: {{ section.settings.heading_color }};
              text-transform: {{ section.settings.heading_transform }};
            "
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="explore-description"
            style="
              font-size: {{ section.settings.desc_size }}px;
              font-weight: {{ section.settings.desc_weight }};
              color: {{ section.settings.desc_color }};
              text-transform: {{ section.settings.desc_transform }};
            "
          >
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_link }}"
            class="explore-button"
            style="
              background-color: {{ section.settings.btn_bg_color }};
              color: {{ section.settings.btn_text_color }};
              border-radius: {{ section.settings.btn_radius }}px;
              padding: {{ section.settings.btn_padding_y }}px {{ section.settings.btn_padding_x }}px;
            "
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <div class="explore-small-images">
        <div class="explore-small-image-wrapper">
          {% if section.settings.small_image_1 != blank %}
            {{
              section.settings.small_image_1
              | image_url: width: 400
              | image_tag: loading: 'lazy', class: 'explore-small-image'
            }}
          {% else %}
            <img
              src="{{ 'carousel-images/carousel-2.webp' | asset_url }}"
              class="explore-small-image"
              loading="lazy"
              width="400"
              height="400"
              alt="Default Small Image 1"
              style="width: 100%; height: 100%; object-fit: cover;"
            >
          {% endif %}
        </div>
        <div class="explore-small-image-wrapper">
          {% if section.settings.small_image_2 != blank %}
            {{
              section.settings.small_image_2
              | image_url: width: 400
              | image_tag: loading: 'lazy', class: 'explore-small-image'
            }}
          {% else %}
            <img
              src="{{ 'carousel-images/carousel-3.webp' | asset_url }}"
              class="explore-small-image"
              loading="lazy"
              width="400"
              height="400"
              alt="Default Small Image 2"
              style="width: 100%; height: 100%; object-fit: cover;"
            >
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .explore-more-section {
    padding: 0px;
    border-radius: 11px;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
  }

  .explore-more-container {
    display: flex;
    {% comment %} gap: 40px; {% endcomment %}
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  .explore-more-left {
    flex: 1;
    height: 100%;
    min-height: -webkit-fill-available;
    width: 50%;
  }

  .explore-more-right {
    flex: 1;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 40px;
    padding: 30px;
  }

  .explore-main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: 1/1.1;
    border-radius: 0px;
  }
  img.explore-main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: 1/1.1;
    border-radius: 0px;
  }

  .explore-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 15px 70px 0px 15px;
    gap: 20px;
  }

  .explore-heading {
    margin: 0;
    line-height: 1.2;
  }

  .explore-description {
    margin: 0;
    line-height: 1.6;
  }

  .explore-button {
    display: inline-block;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.3s ease;
    border: 1px solid currentColor; /* Optional border style */
  }

  .explore-button:hover {
    opacity: 0.8;
  }

  .explore-small-images {
    display: flex;
    gap: 20px;
    padding:1rem;
  }

  .explore-small-image-wrapper {
    flex: 1;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 8px;
  }

  .explore-small-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .explore-small-image-wrapper:hover .explore-small-image {
    transform: scale(1.05);
  }

  @media screen and (max-width: 990px) {
    .explore-more-container {
      flex-direction: column;
    }
    .explore-more-left,
    .explore-more-right {
      width: 100%;
    }
     .explore-more-section {

    border-radius: 0px;

  }
  }
</style>

{% schema %}
{
  "name": "Explore More",
  "settings": [
    {
      "type": "header",
      "content": "Section Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Left Main Image"
    },
    {
      "type": "header",
      "content": "Heading Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "CLASSIC CHARM FOR EVERY OCCASION"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Heading Size",
      "default": 48
    },
    {
      "type": "range",
      "id": "heading_weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "label": "Heading Weight",
      "default": 400
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "heading_transform",
      "label": "Heading Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "lowercase", "label": "Lowercase" },
        { "value": "capitalize", "label": "Capitalize" }
      ],
      "default": "uppercase"
    },
    {
      "type": "header",
      "content": "Description Settings"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore a vibrant mix of tradition and modern trends. Whether you need effortless daily wear or chic festive outfits, we have the perfect look for the modern Indian woman."
    },
    {
      "type": "range",
      "id": "desc_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Description Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "desc_weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "label": "Description Weight",
      "default": 400
    },
    {
      "type": "color",
      "id": "desc_color",
      "label": "Description Color",
      "default": "#cccccc"
    },
    {
      "type": "select",
      "id": "desc_transform",
      "label": "Description Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "lowercase", "label": "Lowercase" },
        { "value": "capitalize", "label": "Capitalize" }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Label",
      "default": "Explore More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "btn_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Border Radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "btn_padding_x",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Horizontal Padding",
      "default": 30
    },
    {
      "type": "range",
      "id": "btn_padding_y",
      "min": 5,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Vertical Padding",
      "default": 15
    },
    {
      "type": "header",
      "content": "Small Images"
    },
    {
      "type": "image_picker",
      "id": "small_image_1",
      "label": "Small Image 1"
    },
    {
      "type": "image_picker",
      "id": "small_image_2",
      "label": "Small Image 2"
    }
  ],
  "presets": [
    {
      "name": "Explore More"
    }
  ]
}
{% endschema %}
