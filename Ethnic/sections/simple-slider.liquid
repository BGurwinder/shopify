<div class="simple-slider-section page-width section-{{ section.id }}-padding">
  <div class="simple-slider-header">
    {% if section.settings.heading != blank %}
      <h2
        class="simple-slider-heading"
        style="
          font-size: {{ section.settings.heading_size }}px;
          font-weight: {{ section.settings.heading_weight }};
          color: {{ section.settings.heading_color }};
          text-transform: {{ section.settings.heading_transform }};
        "
      >
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <div
        class="simple-slider-subheading"
        style="
          font-size: {{ section.settings.subheading_size }}px;
          font-weight: {{ section.settings.subheading_weight }};
          color: {{ section.settings.subheading_color }};
          text-transform: {{ section.settings.subheading_transform }};
        "
      >
        {{ section.settings.subheading }}
      </div>
    {% endif %}
  </div>

  <div class="simple-slider-container" id="SimpleSlider-{{ section.id }}">
    <button class="simple-slider-arrow simple-slider-prev" aria-label="Previous slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>

    <div class="simple-slider-viewport">
      <div class="simple-slider-track">
        {% for block in section.blocks %}
          <div class="simple-slider-slide" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.collection.url | default: '#' }}" class="simple-slider-link">
              {% if block.settings.image != blank %}
                {{
                  block.settings.image
                  | image_url: width: 600
                  | image_tag: loading: 'lazy', class: 'simple-slider-image'
                }}
              {% else %}
                {% assign image_index = forloop.index0 | modulo: 8 | plus: 1 %}
                {% assign default_image_path = 'carousel-images/carousel-' | append: image_index | append: '.webp' %}
                <img
                  src="{{ default_image_path | asset_url }}"
                  class="simple-slider-image"
                  loading="lazy"
                  width="600"
                  height="600"
                  alt="Default Slide"
                  style="width: 100%; height: 100%; object-fit: cover;"
                >
              {% endif %}
            </a>
          </div>
        {% endfor %}
      </div>
    </div>

    <button class="simple-slider-arrow simple-slider-next" aria-label="Next slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
</div>

<style>
  .simple-slider-section {
    padding-top: 4rem;
    padding-bottom: 4rem;
    overflow: hidden;
    {% comment %} background: #f7f7f7f7; {% endcomment %}
    width: 85%;
    margin: 50px auto;
    border-radius: 10px;
    box-shadow: 0 4px 7px 2px rgba(0, 0, 0, 0.1);
  }

  .simple-slider-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .simple-slider-heading {
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .simple-slider-subheading {
    margin: 0;
    line-height: 1.5;
  }

  .simple-slider-container {
    position: relative;
    max-width: var(--page-width);
    margin: 0 auto;
    display: flex;
    align-items: center;
  }

  .simple-slider-viewport {
    overflow: hidden;
    width: 100%;
    margin: 0px -18px;
  }

  .simple-slider-track {
    display: flex;
    gap: 20px;
    transition: transform 0.5s ease-in-out;
  }

  .simple-slider-slide {
    flex: 0 0 calc(25% - 15px); /* 4 slides visible by default */
    min-width: 0;
    position: relative;
  }

  .simple-slider-link {
    display: block;
    width: 100%;
    aspect-ratio: 1; /* Square images */
    overflow: hidden;
    border-radius: 0;
  }

  .simple-slider-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .simple-slider-link:hover .simple-slider-image {
    transform: scale(1.05);
  }

  .simple-slider-arrow {
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 2;
    flex-shrink: 0;
    color: #000;
  }

  .simple-slider-arrow:hover {
    background: #000;
    color: #fff;
    border-color: #000;
  }

  @media screen and (max-width: 990px) {
    .simple-slider-slide {
      flex: 0 0 calc(33.333% - 13.33px); /* 3 slides */
    }
  }

  @media screen and (max-width: 750px) {
    .simple-slider-slide {
      flex: 0 0 calc(50% - 10px); /* 2 slides */
    }
    .simple-slider-arrow {
      width: 32px;
      height: 32px;
    }
  }
</style>

<script src="{{ 'simple-slider.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Simple Slider",
  "settings": [
    {
      "type": "header",
      "content": "Heading Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "THE NEW DROP"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Heading Size",
      "default": 40
    },
    {
      "type": "range",
      "id": "heading_weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "label": "Heading Weight",
      "default": 400
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "heading_transform",
      "label": "Heading Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "lowercase", "label": "Lowercase" },
        { "value": "capitalize", "label": "Capitalize" }
      ],
      "default": "uppercase"
    },
    {
      "type": "header",
      "content": "Subheading Settings"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>What everyone else will be wearing next season.<br>What you get to wear now. Be first. Be fast. Or be forgotten.</p>"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Subheading Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "subheading_weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "label": "Subheading Weight",
      "default": 400
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#333333"
    },
    {
      "type": "select",
      "id": "subheading_transform",
      "label": "Subheading Transform",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "uppercase", "label": "Uppercase" },
        { "value": "lowercase", "label": "Lowercase" },
        { "value": "capitalize", "label": "Capitalize" }
      ],
      "default": "none"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Collection Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Simple Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
