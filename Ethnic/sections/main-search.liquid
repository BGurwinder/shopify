<style>
  .template-search__header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .template-search__search {
    margin: 0 auto;
    max-width: 47.8rem;
  }

  .template-search__search .search {
    margin-top: 3rem;
  }

  .template-search--empty {
    padding-bottom: 18rem;
  }

  /* Round Search Bar Styles */
  .search-page-form {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-page-input {
    width: 100%;
    padding: 15px 25px;
    padding-right: 50px;
    border: 1px solid #e5e5e5;
    border-radius: 50px; /* Round shape */
    font-size: 16px;
    outline: none;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    transition: box-shadow 0.3s ease, border-color 0.3s ease;
  }

  .search-page-input:focus {
    border-color: #000;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .search-page-button {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    color: #666;
  }

  .search-page-button:hover {
    color: #000;
  }

  /* Grid Layout */
  .search-results-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-top: 40px;
  }

  @media screen and (min-width: 750px) {
    .search-results-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }
  }

  @media screen and (min-width: 990px) {
    .search-results-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<div class="template-search{% unless search.performed and search.results_count > 0 %} template-search--empty{% endunless %} section-{{ section.id }}-padding">
  <div class="template-search__header page-width">
    <h1 class="h2 center">
      {%- if search.performed -%}
        {{- 'templates.search.title' | t -}}
      {%- else -%}
        {{- 'general.search.search' | t -}}
      {%- endif -%}
    </h1>

    <div class="template-search__search">
      <form action="{{ routes.search_url }}" method="get" role="search" class="search-page-form">
        <input
          class="search-page-input"
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="{{ 'general.search.search' | t }}"
        >
        <input type="hidden" name="type" value="product">
        <button type="submit" class="search-page-button" aria-label="{{ 'general.search.search' | t }}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>
      </form>
    </div>

    {%- if search.performed -%}
      {%- unless section.settings.enable_filtering or section.settings.enable_sorting -%}
        {%- if search.results_count > 0 -%}
          <p role="status">
            {{ 'templates.search.results_with_count_and_term' | t: terms: search.terms, count: search.results_count }}
          </p>
        {%- endif -%}
      {%- endunless -%}
      {%- if search.results_count == 0 and search.filters == empty -%}
        <p role="status">{{ 'templates.search.no_results' | t: terms: search.terms }}</p>
      {%- endif -%}
    {%- endif -%}
  </div>

  {%- if search.performed -%}
    <div class="page-width">
      {% paginate search.results by 24 %}
        <div class="template-search__results">
          {%- if search.results.size == 0 -%}
            <!-- Empty state handled above -->
          {%- else -%}
            <div class="search-results-grid">
              {%- for item in search.results -%}
                {%- if item.object_type == 'product' -%}
                  {% render 'product-card', product: item %}
                {%- endif -%}
              {%- endfor -%}
            </div>
            {%- if paginate.pages > 1 -%}
              {% render 'pagination', paginate: paginate %}
            {%- endif -%}
          {%- endif -%}
        </div>
      {% endpaginate %}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Search Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ]
}
{% endschema %}
