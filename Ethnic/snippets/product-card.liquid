<div class="product-card">
  <div class="product-card__image-wrapper product-card-slider">
    <div class="card-slider-track">
      {% if product.images.size > 1 %}
        {% assign images_limit = 5 %}
        {% assign images_to_show = product.images | slice: 0, images_limit %}

        {% comment %} Clone Last Image {% endcomment %}
        <div class="card-slider-item clone">
          <a href="{{ product.url }}" class="full-unstyled-link">
            {{ images_to_show.last | image_url: width: 533 | image_tag: loading: 'lazy', class: 'product-card__image' }}
          </a>
        </div>

        {% for image in images_to_show %}
          <div class="card-slider-item">
            <a href="{{ product.url }}" class="full-unstyled-link">
              {{ image | image_url: width: 533 | image_tag: loading: 'lazy', class: 'product-card__image' }}
            </a>
          </div>
        {% endfor %}

        {% comment %} Clone First Image {% endcomment %}
        <div class="card-slider-item clone">
          <a href="{{ product.url }}" class="full-unstyled-link">
            {{
              images_to_show.first
              | image_url: width: 533
              | image_tag: loading: 'lazy', class: 'product-card__image'
            }}
          </a>
        </div>

      {% elsif product.images.size == 1 %}
        <div class="card-slider-item">
          <a href="{{ product.url }}" class="full-unstyled-link">
            {{
              product.images.first
              | image_url: width: 533
              | image_tag: loading: 'lazy', class: 'product-card__image'
            }}
          </a>
        </div>
      {% else %}
        <div class="card-slider-item">
          <a href="{{ product.url }}" class="full-unstyled-link">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </a>
        </div>
      {% endif %}
    </div>
    {% if product.images.size > 1 %}
      <button class="card-slider-arrow prev" aria-label="Previous image">
        <svg
          aria-hidden="true"
          focusable="false"
          role="presentation"
          class="icon icon-caret"
          viewBox="0 0 10 6"
          style="transform: rotate(90deg);"
        >
          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor"></path>
        </svg>
      </button>
      <button class="card-slider-arrow next" aria-label="Next image">
        <svg
          aria-hidden="true"
          focusable="false"
          role="presentation"
          class="icon icon-caret"
          viewBox="0 0 10 6"
          style="transform: rotate(-90deg);"
        >
          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor"></path>
        </svg>
      </button>
    {% endif %}
    <button
      class="add-to-cart-icon-btn"
      data-product-id="{{ product.selected_or_first_available_variant.id }}"
      aria-label="Add to cart"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 20C9 21.1046 8.10457 22 7 22C5.89543 22 5 21.1046 5 20C5 18.8954 5.89543 18 7 18C8.10457 18 9 18.8954 9 20Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M20 20C20 21.1046 19.1046 22 18 22C16.8954 22 16 21.1046 16 20C16 18.8954 16.8954 18 18 18C19.1046 18 20 18.8954 20 20Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M1 1H4L6.68 14.39C6.77144 14.8504 7.02191 15.264 7.38755 15.5583C7.75318 15.8526 8.2107 16.009 8.68 16H19.4C19.8693 16.009 20.3268 15.8526 20.6925 15.5583C21.0581 15.264 21.3086 14.8504 21.4 14.39L23 6H6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
  <div class="product-card__info">
    <h3 class="product-card__title">
      <a href="{{ product.url }}" class="full-unstyled-link">{{ product.title }}</a>
    </h3>
    <div class="product-card__price">
      {{ product.price | money }}
    </div>
  </div>
</div>
