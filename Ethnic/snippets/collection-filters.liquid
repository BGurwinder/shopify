<!-- Filter Overlay -->
<div class="filter-overlay">
  <div class="filter-drawer">
    <div class="filter-header">
      <h2>Filter</h2>
      <button class="close-filter-btn">&times;</button>
    </div>

    <form id="CollectionFiltersForm" class="filter-form">
      <div class="filter-content">
        {%- for filter in collection.filters -%}
          <div class="filter-group">
            <div class="filter-group-summary">
              <span>{{ filter.label }}</span>
            </div>
            <div class="filter-group-content">
              {%- case filter.type -%}
                {%- when 'boolean', 'list' -%}
                  <ul class="filter-list">
                    {%- for value in filter.values -%}
                      <li class="filter-item">
                        <label for="Filter-{{ filter.param_name }}-{{ forloop.index }}">
                          <input
                            type="checkbox"
                            name="{{ value.param_name }}"
                            value="{{ value.value }}"
                            id="Filter-{{ filter.param_name }}-{{ forloop.index }}"
                            {% if value.active %}
                              checked
                            {% endif %}
                            {% if value.count == 0 and value.active == false %}
                              disabled
                            {% endif %}
                          >
                          <span>{{ value.label }} ({{ value.count }})</span>
                        </label>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- when 'price_range' -%}
                  <div class="price-range-inputs">
                    <div class="price-input-group">
                      <span>{{ cart.currency.symbol }}</span>
                      <input
                        name="{{ filter.min_value.param_name }}"
                        id="Filter-Price-GTE"
                        {% if filter.min_value.value -%}
                          value="{{ filter.min_value.value | money_without_currency | replace: ',', '' }}"
                        {%- endif %}
                        type="number"
                        placeholder="0"
                        min="0"
                        max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                      >
                    </div>
                    <span>To</span>
                    <div class="price-input-group">
                      <span>{{ cart.currency.symbol }}</span>
                      <input
                        name="{{ filter.max_value.param_name }}"
                        id="Filter-Price-LTE"
                        {% if filter.max_value.value -%}
                          value="{{ filter.max_value.value | money_without_currency | replace: ',', '' }}"
                        {%- endif %}
                        type="number"
                        placeholder="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                        min="0"
                        max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                      >
                    </div>
                  </div>
              {%- endcase -%}
            </div>
          </div>
        {%- endfor -%}

        <div class="filter-group">
          <div class="filter-group-summary">
            <span>Sort By</span>
          </div>
          <div class="filter-group-content">
            <ul class="filter-list">
              {%- for option in collection.sort_options -%}
                <li class="filter-item">
                  <label for="Sort-{{ option.value }}">
                    <input
                      type="radio"
                      name="sort_by"
                      value="{{ option.value }}"
                      id="Sort-{{ option.value }}"
                      {% if collection.sort_by == option.value %}
                        checked
                      {% endif %}
                    >
                    <span>{{ option.name }}</span>
                  </label>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        </div>
      </div>

      <div class="filter-actions">
        <a href="{{ collection.url }}?sort_by={{ collection.sort_by }}" class="clear-btn">Clear all</a>
        <button type="submit" class="apply-btn">Apply</button>
      </div>
    </form>
  </div>
</div>
